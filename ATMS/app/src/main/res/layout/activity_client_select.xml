<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kieronmc.atms.ClientSelect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/Text"
            android:text="Air Traffic Management System | Â© Kieron McAuley-Kinchin"
            android:textStyle="bold" />

        <Button
            android:id="@+id/client1connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Start Client 1"
            app:layout_constraintBottom_toTopOf="@+id/client2connect"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:theme="@style/Start_btn" />

        <Button
            android:id="@+id/client2connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Start Client 2"
            app:layout_constraintBottom_toTopOf="@+id/client3connect"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:theme="@style/Disable_btn" />

        <Button
            android:id="@+id/client3connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Start Client 3"
            app:layout_constraintBottom_toTopOf="@+id/client4connect"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:theme="@style/Disable_btn" />

        <Button
            android:id="@+id/client4connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Start Client 4"
            app:layout_constraintBottom_toTopOf="@+id/client5connect"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:theme="@style/Disable_btn" />

        <Button
            android:id="@+id/client5connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Client 5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="416dp"
            android:theme="@style/Disable_btn" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
